[core]
    editor = nvim
    ignorecase = true
    pager = delta
[color]
    ui = auto
[column]
    ui = auto
[branch]
    sort = -committerdate
[init]
    defaultBranch = main
[commit]
    verbose = true
[push]
    autoSetupRemote = true
[rebase]
    autosquash = true
    updateRefs = true
[fetch]
    fsckobjects = true
    prune = true
    pruneTags = true
[receive]
    fsckobjects = true
[transfer]
    fsckobjects = true

[alias]
    hst = "log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all"
    llog = "log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative"
    fp = "push --force-with-lease"

[user]
    name = Charles Hsieh
    email = charleshs91tw@gmail.com
[github]
    user = charleshs91

[include]
    path = ~/dotfiles/delta/themes.gitconfig

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
    tool = nvimdiff
[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
[mergetool "nvimdiff"]
    layout = LOCAL,BASE,REMOTE / MERGED + BASE,LOCAL + BASE,REMOTE
[interactive]
    diffFilter = delta --color-only
[delta]
    features = arctic-fox
    ; features = villsau
    line-numbers = true
    navigate = true
    ; side-by-side = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

